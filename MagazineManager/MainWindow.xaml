<Window x:Class="MagazineManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazineManager"
        mc:Ignorable="d"
        Title="Magazine Manager" Height="720" Width="1280"
        WindowState="Maximized">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Grid.RowSpan="2">
            <ListBox d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </Grid>

        <Grid Margin="5,0,5,0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="95*" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="loginTextBlock" Grid.Row="0" Text="Zalogowano na konto: " />
            <Button x:Name="logoutButton" Grid.Row="1" Content="Logout" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>

    </Grid>
</Window>
