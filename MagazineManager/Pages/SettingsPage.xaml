<Page x:Class="MagazineManager.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MagazineManager"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="SettingsPage">

    <Grid Background="white">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" >
            <Frame x:Name="settingsFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
        
        <Grid Grid.Column="1" Background="#c4c4c4">
            <Grid.RowDefinitions>
                <RowDefinition Height="90*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Button x:Name="usersManagerButton" Grid.Row="1" Grid.Column="1" Content="User Manager" Margin="8px" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="changeSettingsClick"/>
        </Grid>
    </Grid>
</Page>
