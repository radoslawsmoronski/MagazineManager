<Page x:Class="MagazineManager.UsersManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MagazineManager"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="UsersManagerPage">

    <Grid Background="White">
        <ListBox />

        <Grid x:Name="ItemLayout" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Dodaj dowolne elementy, np. TextBlock, Image, itp. -->
            <TextBlock Text="Nazwa:" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" x:Name="NazwaTextBlock" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
